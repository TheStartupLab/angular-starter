{
  "name": "angular-starter",
  "version": "1.0.0",
  "description": "angular starter app with webpack",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build:dev": "yarn clean:dist && webpack --config config/webpack.dev.js --progress --profile",
    "build:prod": "yarn clean:dist && webpack --config config/webpack.prod.js --progress --profile --bail",
    "build": "yarn build:dev",
    "clean": "yarn cache clean && yarn rimraf -- node_modules coverage dist",
    "clean:dist": "yarn rimraf -- dist",
    "rimraf": "rimraf",
    "serve": "webpack-dev-server --config config/webpack.dev.js --open --progress --profile --watch --content-base src/",
    "test": "karma start"
  },
  "dependencies": {
    "@angular/common": "^2.4.9",
    "@angular/compiler": "^2.4.9",
    "@angular/core": "^2.4.9",
    "@angular/forms": "^2.4.9",
    "@angular/http": "^2.4.9",
    "@angular/platform-browser": "^2.4.9",
    "@angular/platform-browser-dynamic": "^2.4.9",
    "@angular/router": "^3.4.9",
    "core-js": "^2.4.1",
    "html-webpack-plugin": "^2.26.0",
    "reflect-metadata": "^0.1.9",
    "rxjs": "^5.0.2",
    "ts-helpers": "^1.1.2",
    "webpack-dev-middleware": "^1.9.0",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "@types/hammerjs": "^2.0.34",
    "@types/jasmine": "^2.5.42",
    "@types/node": "^6.0.57",
    "@types/selenium-webdriver": "^2.53.39",
    "@types/source-map": "^0.5.0",
    "@types/uglify-js": "^2.6.28",
    "@types/webpack": "^2.1.0",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.4.1",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-remap-coverage": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "optimize-js-plugin": "^0.0.4",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "source-map-loader": "^0.1.6",
    "style-loader": "^0.13.2",
    "to-string-loader": "^1.1.5",
    "typescript": "^2.1.4",
    "webpack": "2.2.1",
    "webpack-dev-server": "2.2.0",
    "webpack-merge": "^2.0.0"
  }
}
